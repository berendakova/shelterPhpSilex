<body>

<header id="header">


    <div class="container">

        <div class="logo float-left">
            <h1 class="text-light"><a href="#intro" class="scrollto"><span>Shelter</span></a></h1>
        </div>

        <nav class="main-nav float-right d-none d-lg-block">
            <ul>
                <li><a href="/">Home</a></li>

                    <li><a href="/registration">Registration</a></li>

                    <li><a href="/auth">Authentication</a></li>
            </ul>
        </nav>
    </div>
</header>
<form method="post" style="margin-top: 150px">
    <h1>Sign In</h1>

    <fieldset>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" placeholder="Ivan Petrov">

        <label for="mail">Email:</label>
        <input type="email" id="mail" name="email" placeholder="example@example.com">

        <label for="password1">Password:</label>
        <input type="password" id="password1" name="password">

        <label for="password2">Password replay:</label>
        <input type="password" id="password2" name="password2">
    </fieldset>
    {% if errors is not empty %}
        {% for error in errors %}
            <p>{{ error }}</p> <br>
        {% endfor %}
    {% endif %}

    <button type="submit" id="reg">Sign In</button>
</form>

<script>
    $(document).ready(function () {

        $("#reg").click(function () {
                var user_name = $('#name').val();
                var user_email = $('#mail').val();
                var user_password = $('#password1').val();
                var user_password2 = $('#password2').val();
                alert("HELLO, " + user_name);

                $.ajax({
                    type: 'POST',
                    url: '/reg',
                    data: {
                        "name": user_name,
                        "email": user_email,
                        "password": user_password,
                        "password2": user_password2
                    },
                    success: function (result) {
                    }
                });
            }
        );
    })

</script>
